<Window x:Class="Load_Spectrum2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Load_Spectrum2"
        mc:Ignorable="d"
        Title="Load Spectrum2" 
        Height="1000"
        Width="1800"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        ResizeMode="CanMinimize">
    <Window.Resources>

        <!--Context Menu-->
        <!--Local1-->
        <ContextMenu x:Key="Local1_Unselect_ctxt">
            <MenuItem x:Name="lu1_Newfolder" Header="새폴더" Click="lu1_Newfolder_Click"/>
            <MenuItem x:Name="lu1_Openfolder" Header="현재 폴더 열기" Click="lu1_Openfolder_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="Local1_Select_ctxt">
            <MenuItem x:Name="ls1_Newfolder" Header="새폴더" Click="ls1_Newfolder_Click"/>
            <MenuItem x:Name="ls1_Openfolder" Header="현재 폴더 열기" Click="ls1_Openfolder_Click"/>
            <MenuItem x:Name="ls1_Rename" Header="이름 바꾸기(F2)" Click="ls1_Rename_Click"/>
            <MenuItem x:Name="ls1_Del" Header="삭제(Delete)" Click="ls1_Del_Click"/>
            <MenuItem x:Name="ls1_Upload" Header="설비로 확산하기" Click="ls1_Upload_Click"/>
        </ContextMenu>

        <!--Local2-->
        <ContextMenu x:Key="Local2_Unselect_ctxt">
            <MenuItem x:Name="lu2_Newfolder" Header="새폴더" Click="lu2_Newfolder_Click"/>
            <MenuItem x:Name="lu2_Openfolder" Header="현재 폴더 열기" Click="lu2_Openfolder_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="Local2_Select_ctxt">
            <MenuItem x:Name="ls2_Newfolder" Header="새폴더" Click="ls2_Newfolder_Click"/>
            <MenuItem x:Name="ls2_Openfolder" Header="현재 폴더 열기" Click="ls2_Openfolder_Click"/>
            <MenuItem x:Name="ls2_Rename" Header="이름 바꾸기(F2)" Click="ls2_Rename_Click"/>
            <MenuItem x:Name="ls2_Del" Header="삭제(Delete)" Click="ls2_Del_Click"/>
            <MenuItem x:Name="ls2_Upload" Header="설비로 확산하기" Click="ls2_Upload_Click"/>
        </ContextMenu>

        <!--EQP1-->
        <ContextMenu x:Key="EQP1_Unselect_ctxt">
            <MenuItem x:Name="eu1_Newfolder" Header="새폴더" Click="eu1_Newfolder_Click"/>
            <MenuItem x:Name="eu1_Openfolder" Header="현재 폴더 열기" Click="eu1_Openfolder_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="EQP1_Select_ctxt">
            <MenuItem x:Name="es1_Newfolder" Header="새폴더" Click="es1_Newfolder_Click"/>
            <MenuItem x:Name="es1_Openfolder" Header="현재 폴더 열기" Click="es1_Openfolder_Click"/>
            <MenuItem x:Name="es1_Rename" Header="이름 바꾸기(F2)" Click="es1_Rename_Click"/>
            <MenuItem x:Name="es1_Del" Header="삭제(Delete)" Click="es1_Del_Click"/>
            <MenuItem x:Name="es1_Upload" Header="로컬로 가져오기" Click="es1_Upload_Click"/>
            <MenuItem x:Name="es1_ETE" Header="설비 To 설비 확산" Click="es1_ETE_Click"/>
        </ContextMenu>

        <!--EQP2-->
        <ContextMenu x:Key="EQP2_Unselect_ctxt">
            <MenuItem x:Name="eu2_Newfolder" Header="새폴더" Click="eu1_Newfolder_Click"/>
            <MenuItem x:Name="eu2_Openfolder" Header="현재 폴더 열기" Click="eu1_Openfolder_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="EQP2_Select_ctxt">
            <MenuItem x:Name="es2_Newfolder" Header="새폴더" Click="es1_Newfolder_Click"/>
            <MenuItem x:Name="es2_Openfolder" Header="현재 폴더 열기" Click="es1_Openfolder_Click"/>
            <MenuItem x:Name="es2_Rename" Header="이름 바꾸기(F2)" Click="es1_Rename_Click"/>
            <MenuItem x:Name="es2_Del" Header="삭제(Delete)" Click="es1_Del_Click"/>
            <MenuItem x:Name="es2_Upload" Header="로컬로 가져오기" Click="es2_Upload_Click"/>
            <MenuItem x:Name="es2_ETE" Header="설비 To 설비 확산" Click="es2_ETE_Click"/>
        </ContextMenu>
    </Window.Resources>

    <!--Grid ShowGridLines="True"-->
    <Grid>
        <TabControl x:Name="tab_main" Margin="5 5 5 5">
            <TabItem Header="파일 전송" Background="#c8ffe1">
                <local:CustomGrid>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <Style x:Key="hiddenStyle" TargetType="GridViewColumnHeader">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </ResourceDictionary>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="11*"/>
                        <RowDefinition Height="11*"/>
                    </Grid.RowDefinitions>

                    <!--Top-->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!--버튼 StackPanel-->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="10">
                            <Button x:Name="eqp_save" Content="설비등록(Alt+Q)" 
                                    Margin="10 0 0 0" Width="100" Height="25"  
                                    Click="eqp_save_Click"
                                    Background="Ivory"                    
                                    Grid.Column="0"
                                    UseLayoutRounding="True">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>

                            <Button x:Name="manual" Content="매뉴얼" 
                                    Margin="10 0 0 0" Width="100" Height="25"                      
                                    Background="Ivory"
                                    UseLayoutRounding="True"                    
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Click="manual_Click">       
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>

                            <Button x:Name="local_save" Content="Local 경로등록" 
                                    Margin="10 0 0 0" Width="100" Height="25"                      
                                    Background="Ivory"
                                    Grid.Column="2"
                                    UseLayoutRounding="True"
                                    ToolTip="등록후 재실행필요" ToolTipService.InitialShowDelay="0"
                                    HorizontalAlignment="Left"
                                    Click="local_save_Click">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>

                            <Button x:Name="dis_localtoeqp" Content="파일 확산(Alt+D)" 
                                    Margin="10 0 0 0" Width="100" Height="25"                      
                                    Background="Ivory"
                                    Grid.Column="2"
                                    UseLayoutRounding="True"                    
                                    HorizontalAlignment="Left"
                                    Click="dis_localtoeqp_Click"
                                    ToolTip="Alt+D" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>

                            <Button x:Name="dis_LotSearch" Content="LotSearch" 
                                    Margin="10 0 0 0" Width="100" Height="25"                      
                                    Background="Ivory"
                                    Grid.Column="2"
                                    UseLayoutRounding="True"                    
                                    HorizontalAlignment="Left"
                                    Click="dis_LotSearch_Click"
                                    ToolTip="Alt+D" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>

                            <CheckBox x:Name="chk_set1_extend" Content="Set1 확장하기" Margin="10 15 0 0" 
                                      Click="chk_set1_extend_Click"
                                      ToolTip="Alt+E" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>

                        </StackPanel>
                    </Grid>

                    <!--Set #1 Local-->
                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Local 경로" Width="Auto" Margin="15 10 0 0" HorizontalAlignment="Left"/>
                        </StackPanel>

                        <ListView Name="list_set1_local_path" 
                                  Margin="10 5 10 10"                                         
                                  GridViewColumnHeader.Click="list_set1_local_path_Click"                                                                  
                                  SelectionChanged="list_set1_local_path_SelectionChanged"
                                  MouseLeftButtonUp="list_set1_local_path_MouseLeftButtonUp"
                                  SelectionMode="Single"                      
                                  Height="373">
                            <ListView.View>
                                <GridView>
                                    <!--<GridViewColumn Header="설명" Width="{Binding ElementName=list_set1_local_path, Path=ActualWidth, Converter={StaticResource WidthConverter}, ConverterParameter=4}" DisplayMemberBinding="{Binding local_comment}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"/>-->
                                    <GridViewColumn Header="설명" Width="65" DisplayMemberBinding="{Binding local_comment}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"/>
                                    <GridViewColumn Header="경로" Width="194" DisplayMemberBinding="{Binding local_path}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="chk_localset1_image" Content="EQP 이미지뷰어" Margin="10 2 0 0"
                                      Click="chk_localset1_image_Click"
                                      ToolTip="Alt+1" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <CheckBox x:Name="chk_eqpset1_image" Content="Local 이미지뷰어" Margin="10 2 0 0"
                                      Click="chk_eqpset1_image_Click"
                                      ToolTip="Alt+2" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                        </StackPanel>
                    </StackPanel>

                    <!--이미지스택-->
                    <StackPanel x:Name="imgstack1_local" Grid.Row="1" Grid.Column="1" Visibility="{Binding Vimg1_local}">
                        <TextBox Text="{Binding ElementName=list_set1_eqp_all, Path=SelectedItems[0], Converter={StaticResource ItemToStringConverter}}" Margin="0 10 0 0" Height="20" Width="520" HorizontalAlignment="Center"/>
                        <Image Source="{Binding Vimg1_local_src}" Margin="0 15 0 20" Stretch="Uniform" Width="500" Height="600" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </StackPanel>

                    <StackPanel x:Name="imgstack2_local" Grid.Row="2" Grid.Column="1" Visibility="{Binding Vimg2_local}">
                        <TextBox Text="{Binding ElementName=list_set2_eqp_all, Path=SelectedItems[0], Converter={StaticResource ItemToStringConverter}}" Margin="0 10 0 0" Height="20" Width="520" HorizontalAlignment="Center"/>
                        <Image Source="{Binding Vimg2_local_src}" Margin="0 15 0 20" Stretch="Uniform" Width="500" Height="600" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </StackPanel>

                    <StackPanel x:Name="imgstack1_eqp" Grid.Row="1" Grid.Column="2" Visibility="{Binding Vimg1_eqp}">
                        <TextBox Text="{Binding ElementName=list_set1_local_all, Path=SelectedItems[0], Converter={StaticResource ItemToStringConverter}}" Margin="0 10 0 0" Height="20" Width="520" HorizontalAlignment="Center"/>
                        <Image Source="{Binding Vimg1_eqp_src}" Margin="0 15 0 20" Stretch="Uniform" Width="500" Height="600" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </StackPanel>

                    <StackPanel x:Name="imgstack2_eqp" Grid.Row="2" Grid.Column="2" Visibility="{Binding Vimg2_eqp}">
                        <TextBox Text="{Binding ElementName=list_set2_local_all, Path=SelectedItems[0], Converter={StaticResource ItemToStringConverter}}" Margin="0 10 0 0" Height="20" Width="520" HorizontalAlignment="Center"/>
                        <Image Source="{Binding Vimg2_eqp_src}" Margin="0 15 0 20" Stretch="Uniform" Width="500" Height="600" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </StackPanel>

                    <!--local path list-->
                    <!--binding Reference--><!--
                    <StackPanel Grid.Row="1" Grid.Column="1" Visibility="{Binding list_set1_local}">
                        --><!--경로 표시 및 주요 버튼--><!--
                        <StackPanel Orientation="Horizontal">
                            
                            <TextBox x:Name="line_set1_local" Margin="10 5 0 0" Text="{Binding text_set1_local}" Width="390" IsReadOnly="True"/>
                            --><!--TextBox Margin="10 5 0 0" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=text_set1_local}"/-->
                            <!--뒤로, 앞으로 버튼--><!--
                            <Button x:Name="Local1_BackBtn" Margin="5 5 0 0" Style="{StaticResource Style_BackBtn}" 
                                    Click="Local1_BackBtn_Click" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="뒤로" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local1_FowardBtn" Margin="5 5 0 0" Style="{StaticResource Style_FowardBtn}"
                                    Click="Local1_FowardBtn_Click" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="앞으로" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local1_UpperBtn" Margin="5 5 0 0" Style="{StaticResource Style_UpperBtn}" 
                                    Click="Local1_UpperBtn_Click" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="상위폴더" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            --><!--keayboardnavigateion 옵션은 엔터를 입력해도 버튼이 실행되지 않도록함--><!--
                            <Button x:Name="Local1_NewFolderBtn" Margin="5 5 0 0" Style="{StaticResource Style_NewFolderBtn}" 
                                    Click="Local1_NewFolderBtn_Click" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="새폴더(F2)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local1_DelBtn" Margin="5 5 0 0" Style="{StaticResource Style_DelBtn}" 
                                    Click="Local1_DelBtn_Click" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="삭제(Del)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local1_TrBtn" Margin="5 5 0 0" Style="{StaticResource Style_TransferBtn}" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                    Click="Local1_TrBtn_Click"
                                    ToolTip="업로드(Alt+T)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                        </StackPanel>

                        --><!--local_path_list_all--><!--
                        <ListView Name="list_set1_local_all"                      
                                  Margin="10 5 10 0"
                                  GridViewColumnHeader.Click="list_set1_local_all_Click" 
                                  PreviewMouseDoubleClick="list_set1_local_all_MouseDoubleClick"
                                  TextSearch.TextPath="local_all_filename"
                                  IsTextSearchEnabled="True"      
                                  ItemsSource="{Binding}"  
                                  PreviewMouseRightButtonUp="list_set1_local_all_PreviewMouseRightButtonUp"
                                  GiveFeedback="list_GiveFeedback"                                                   
                                  AllowDrop="True"
                                  PreviewMouseDown="listView_PreviewMouseDown"
                                  PreviewMouseUp="listView_PreviewMouseUp"
                                  PreviewMouseMove="listView_PreviewMouseMove"
                                  LostMouseCapture="listView_LostMouseCapture"
                                  DragEnter="listView_DragEnter"
                                  DragOver="listView_DragOver"
                                  Drop="listView_Drop"                                                                  
                                  Height="375">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="30"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Image Source="{Binding local_all_src}" 
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="이름" 
                                        Width="{Binding ElementName=list_set1_local_all, Path=ActualWidth, Converter={StaticResource WidthConverter}, ConverterParameter=2.5}"
                                        DisplayMemberBinding="{Binding local_all_filename}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"
                                        x:Name="first_col"/>
                                    <GridViewColumn Header="수정날짜" 
                                        Width="{Binding ElementName=list_set1_local_all, Path=ActualWidth, Converter={StaticResource WidthConverter}, ConverterParameter=4.2}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"
                                        DisplayMemberBinding="{Binding local_all_date, StringFormat='{}{0:yyyy-MM-dd H:mm}'}"/>
                                    <GridViewColumn Header="유형" 
                                        Width="{Binding ElementName=list_set1_local_all, Path=ActualWidth, Converter={StaticResource WidthConverter}, ConverterParameter=7}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"
                                        DisplayMemberBinding="{Binding local_all_extension}"/>
                                    <GridViewColumn Header="크기" 
                                        Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}, Converter={StaticResource LastWidthConverter}}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"
                                        DisplayMemberBinding="{Binding local_all_size}"/>


                                </GridView>
                            </ListView.View>
                        </ListView>

                        --><!--하단 상태표시줄, 진행바--><!--
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding ElementName=list_set1_local_all, Path=Items.Count, Converter={StaticResource ListAllItemCntConverter}}" 
                           Margin="10 7 0 0"
                           HorizontalAlignment="Left"                            
                           VerticalAlignment="Center"
                           Grid.Column="0"/>
                            <TextBlock Text="{Binding ElementName=list_set1_local_all, Path=SelectedItems.Count, Converter={StaticResource ListItemCntConverter}}" 
                           Margin="5 7 0 0"
                           HorizontalAlignment="Left"                             
                           VerticalAlignment="Center"
                           Grid.Column="1"/>

                            <Grid Grid.Column="3">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                                    <Button x:Name="Local1_StopBtn" Margin="5 7 0 0" Style="{StaticResource Style_StopBtn}" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                Click="Local1_StopBtn_Click"
                                VerticalAlignment="Center"
                                ToolTip="다운중단" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>

                                    <local:perBusySpinner x:Name="Spin_local1" 
                                          Width="20" 
                                          Background="Transparent" 
                                          Foreground="Blue"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="5 7 0 0"/>
                                </StackPanel>

                            </Grid>

                            <Grid Grid.Column="4">
                                <ProgressBar x:Name="Pgb_local1" Width="158" Height="20" 
                                 Minimum="0" Maximum="100" Value="0" 
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Margin="5 7 0 0"/>
                                <TextBlock x:Name="Pgb_local1_text"    
                               Margin="5 9 0 0"                               
                               Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                        </Grid>

                    </StackPanel>-->

                    <!--Set #2 Local-->
                    <StackPanel x:Name="stack2_local_path" Grid.Row="2" Grid.Column="0" UseLayoutRounding="True" Visibility="{Binding Vlocal2_path}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Local 경로" Width="Auto" Margin="15 10 0 0" HorizontalAlignment="Left"/>
                        </StackPanel>

                        <ListView Name="list_set2_local_path" 
                                  Margin="10 5 10 10"                                         
                                  GridViewColumnHeader.Click="list_set2_local_path_Click"                                                                  
                                  SelectionChanged="list_set2_local_path_SelectionChanged"
                                  MouseLeftButtonUp="list_set2_local_path_MouseLeftButtonUp"
                                  SelectionMode="Single"
                                  Height="373">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="설명" Width="65" DisplayMemberBinding="{Binding local_comment}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"/>
                                    <GridViewColumn Header="경로" Width="194" DisplayMemberBinding="{Binding local_path}"
                                        HeaderContainerStyle="{StaticResource LocalHeaderStyle}"/>
                                </GridView>
                            </ListView.View>

                        </ListView>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="chk_localset2_image" Content="EQP 이미지뷰어" Margin="10 2 0 0"
                                      Click="chk_localset2_image_Click"
                                      ToolTip="Alt+3" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <CheckBox x:Name="chk_eqpset2_image" Content="Local 이미지뷰어" Margin="10 2 0 0"
                                      Click="chk_eqpset2_image_Click"
                                      ToolTip="Alt+4" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                        </StackPanel>

                    </StackPanel>

                    <!--local path list-->
                    <!--binding Reference-->
                    <StackPanel x:Name="stack2_local" Grid.Row="2" Grid.Column="1" Visibility="{Binding Vstack2_local}">
                        <!--경로 표시 및 주요 버튼-->
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="line_set2_local" Margin="10 5 0 0" Text="{Binding text_set2_local}" Width="390" IsReadOnly="True"/>
                            <!--TextBox Margin="10 5 0 0" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=text_set1_local}"/-->
                            <!--뒤로, 앞으로 버튼-->
                            <Button x:Name="Local2_BackBtn" Margin="5 5 0 0" Style="{StaticResource Style_BackBtn}" 
                                    Click="Local2_BackBtn_Click" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="뒤로(Backspace)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local2_FowardBtn" Margin="5 5 0 0" Style="{StaticResource Style_FowardBtn}" 
                                    Click="Local2_FowardBtn_Click" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="앞으로(Alt+→)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local2_UpperBtn" Margin="5 5 0 0" Style="{StaticResource Style_UpperBtn}" 
                                    Click="Local2_UpperBtn_Click" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="상위폴더" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <!--keayboardnavigateion 옵션은 엔터를 입력해도 버튼이 실행되지 않도록함-->
                            <Button x:Name="Local2_NewFolderBtn" Margin="5 5 0 0" Style="{StaticResource Style_NewFolderBtn}" 
                                    Click="Local2_NewFolderBtn_Click" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="새폴더" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local2_DelBtn" Margin="5 5 0 0" Style="{StaticResource Style_DelBtn}" 
                                    Click="Local2_DelBtn_Click" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                    ToolTip="삭제(Del)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                            <Button x:Name="Local2_TrBtn" Margin="5 5 0 0" Style="{StaticResource Style_TransferBtn}" KeyboardNavigation.AcceptsReturn="False" RenderOptions.BitmapScalingMode="HighQuality"
                                    Click="Local2_TrBtn_Click"
                                    ToolTip="업로드(Alt+T)" ToolTipService.ShowDuration="20000" ToolTipService.InitialShowDelay="500"/>
                        </StackPanel>

                        <!--local_path_list_all-->
                        <ListView Name="list_set2_local_all"                      
                                  Margin="10 5 10 0"
                                  GridViewColumnHeader.Click="list_set2_local_all_Click"                                      
                                  PreviewMouseDoubleClick="list_set2_local_all_MouseDoubleClick"
                                  TextSearch.TextPath="local_all_filename"
                                  IsTextSearchEnabled="True"                      
