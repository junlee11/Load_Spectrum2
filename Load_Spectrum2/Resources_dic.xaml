                    <ContentControl>
                        <Image Name ="img" Source="Resources/icon_default_stop.png" Width="18" Height="18" />
                    </ContentControl>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver" Value="True" >
